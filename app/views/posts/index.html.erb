<div class="center jumbotron">
    <h1>Posts Page</h1>

    <div>
        <% if @posts.empty? %>
        <p>No posts currently available</p>
        <% end %>
    </div>

    <div class="postsindex">
        <ul>
            <%@posts.each do |post| %>
            <% user = User.find(post.user_id)%>
            <%user_name = user.name%>
            <% if signed_in? %>
            <%= user_name %> posted
            <% end %>
            <%= link_to post.title, post %> <br>
            <% end %>
        </ul>
    </div>
    <% if !user_signed_in? %>
<%= link_to "Login", new_user_session_path ,class: "btn btn-md btn-primary"%> or you can <%= link_to "Sign up now!", new_user_registration_path , class: "btn btn-md btn-primary" %>
<%else%>
<%= link_to "Create Post", new_post_path , class: "btn btn-md btn-primary" %>
<%end%>
</div>
